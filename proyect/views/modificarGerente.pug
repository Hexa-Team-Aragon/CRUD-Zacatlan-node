extends ./layout/index.pug
block compartircontenido 
    main.container.mt-5
        .row 
            .col-md-12 
                h2.d.block.w-100.text-center.fw-bold #{pagina}
                if (errores)
                    each error in errores
                        .alert.col.alert-danger.text-center=error.mensaje 
            .row.justify-content-center
                .col-md-5
                    form(action=`/gerentes/modificar?id=${gerente.id_gr}`,id="form1",method="post",)
                        .form-group.mt-4
                            label.mb-1(for="nombre") Nombre del gerente: 
                            input(type="text",required maxlength="40", placeholder="Nombre del gerente", name="nombre",class="form-control",value=gerente.nombre)
                        .form-group.mt-2
                            label.mb-1(for="apellidoPaterno") Apellido paterno:
                            input(type="text",required maxlength="20", placeholder="Apellido paterno", name="apellido_paterno",class="form-control",value=gerente.apellido_paterno)
                        .form-group.mt-2
                            label.mb-1(for="apellidoMaterno") Apellido materno: 
                            input(type="text", required maxlength="20", placeholder="Apellido materno", name="apellido_materno",class="form-control",value=gerente.apellido_materno)
                        .form-group.mt-2
                            label.mb-1(for="telefono") Teléfono:
                            input(type="text",required minlength="10" maxlength="10", onKeypress="if (event.keyCode < 45 || event.keyCode > 57) event.returnValue = false",placeholder="Teléfono", name="telefono",class="form-control",value=gerente.telefono)
                        .form-group.mt-2
                            label.mb-1(for="hotel") Hotel: 
                        select.form-select(aria-label='Default select example' name="id_ht")
                            option(selected='',value=`${hotel.id_ht}`) #{hotel.nombre}
                            each h in selectHoteles
                                option(value=h.id_ht) #{h.nombre}
                        .container-fluid.d-flex.justify-content-center.my-4
                            input.btn.btn-success.btn-block.me-5(type="submit",value="Guardar")
                            a(href=`/gerentes`, class='btn btn-danger btn-clock') Cancelar