extends ./layout/index.pug
block compartircontenido 
    main.container.mt-5
        .row 
            
                .col-md-12 
                    h2.d.block.w-100.text-center.fw-bold #{pagina} 
                    if (errores)
                        each error in errores
                            .alert.col.alert-danger.text-center=error.mensaje 
                .row.justify-content-center 
                    .col-md-5 
                        form(action="/crearHabitacion",method="post")
                            .form-group.mt-2    
                                label.mb-1(for="categoria") Categoria:
                            select.form-select(aria-label='Default select example' name="categoriaSeleccionada")
                                option(selected='',value='sin seleccionar') Selecciona una categoria
                                each categoria in categorias
                                    option(value=categoria.id_cat) #{categoria.nombre}
                            .container-fluid.d-flex.justify-content-center.my-4
                                input.btn.btn-success.btn-block.me-5(type="submit",value="Registrar")
                                a(href=`/cancelarHab`, class='btn btn-danger btn-clock') Cancelar