extends ./layout/index.pug 
block compartircontenido 
    h1.text-center.pt-4.fw-bold #{pagina}
    main.container.mt-5#text2
        .container.text-center.mb-4.mt-0
            a(href='/crearHotel', class='btn btn-success btn-clock') Registrar hotel
            .container-fluid.col-ms.d-flex.align-items-sm-stretch.py-4
                .container-fluid
                    table.table.table-striped.table-hover.table-bordered.border-primary.align-middle.table-success.border.border-3
                        thead
                            tr
                            th.align-middle(scope='col') Nombre del hotel
                            th.align-middle(scope='col') Dirección
                            th.align-middle(scope='col') E-mail
                            th.align-middle(scope='col') Teléfono
                            th.align-middle(scope='col') Acciones
                            
                        tbody
                            each hotel in hoteles
                                tr
                                td=`${hotel.nombre}`
                                td=`${hotel.direccion}`
                                td=`${hotel.correo}`
                                td=`${hotel.telefono}`
                                td.col-2.align-middle
                                    .container-fluid.d-flex.justify-content-between
                                        a(href=`/adminDetalles?id=${hotel.id_ht}`)
                                            img(src='/images/ver.png', alt='', width='25', height='25')
                                        a(href=`/modificarHotel?id=${hotel.id_ht}`)
                                            img(src='/images/editar.png', alt='', width='25', height='25')
                                        if rol == "administrador"
                                            a(href=`/hoteles/eliminar?id=${hotel.id_ht}`)
                                                img(src='/images/eliminar.png', alt='', width='25', height='25')
                                
                            